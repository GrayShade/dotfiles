[alias]
    cl = clone
    st = status
    ci = commit
    ps = push
    pu = pull
    pr = pull --rebase
    lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
    unp = log --branches --not --remotes --decorate --oneline
    pullall = !bash -c \"git pull && git submodule update --init --recursive\"
[diff]
    algorithm = patience
    indentHeuristic = on
[push]
    default = simple
[user]
    email = lnicola@dend.ro
    name = Laurentiu Nicola
[sendemail]
    smtpencryption = tls
    smtpserver = smtp.fastmail.com
    smtpserverport = 587
    confirm = auto
[color]
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[credential]
    helper = store
[commit]
    verbose = true
